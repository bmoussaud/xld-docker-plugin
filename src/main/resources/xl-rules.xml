<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">
    <rule name="docker.Container.Create" scope="deployed">
        <conditions>
            <type>docker.RunContainer</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <description expression="true">"Run the container '%s' (%s)" % (deployed.name, deployed.image)</description>
                <order>65</order>
                <script>docker/docker-run</script>
            </os-script>
            <wait>
                <order>65</order>
                <description expression="true">"Waiting for 10 seconds"</description>
                <seconds>10</seconds>
            </wait>
            <os-script>
                <description expression="true">"Dump the logs of the container '%s'" % (deployed.name)</description>
                <order>65</order>
                <script>docker/docker-log</script>
            </os-script>
        </steps>
    </rule>
    <rule name="docker.Container.Destroy" scope="deployed">
        <conditions>
            <type>docker.RunContainer</type>
            <operation>DESTROY</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <os-script>
                <description expression="true">"Stop the container '%s' (%s)" % (previousDeployed.name, previousDeployed.image)</description>
                <order>35</order>
                <script>docker/docker-stop</script>
                <freemarker-context>
                    <name expression="true">previousDeployed.name</name>
                </freemarker-context>
            </os-script>
            <os-script>
                <description expression="true">"Remove the container '%s' (%s)" % (previousDeployed.name, previousDeployed.image)</description>
                <order>35</order>
                <script>docker/docker-rm</script>
                <freemarker-context>
                    <name expression="true">previousDeployed.name</name>
                </freemarker-context>
            </os-script>
        </steps>
    </rule>

    <rule name="docker.Container.Create.Pull" scope="deployed">
        <conditions>
            <type>docker.RunContainer</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
            <expression>deployed.container.privateRegistryAddress is not None and deployed.container.privateRegistryPort is not None</expression>
        </conditions>
        <steps>
            <os-script>
                <description expression="true">"Pull the container %s (%s) from the registry %s:%s " % (deployed.name, deployed.image,
                    deployed.container.privateRegistryAddress, deployed.container.privateRegistryPort)
                </description>
                <order>55</order>
                <script>docker/docker-pull-tag</script>
            </os-script>
        </steps>
    </rule>


    <rule name="smoketest.RunHttpRequest.docker" scope="deployed">
        <conditions>
            <type>smoketest.ExecutedDockerizedHttpRequestTest</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
            <operation>NOOP</operation>
        </conditions>
        <steps>
            <os-script>
                <script>docker/run-command</script>
                <order>102</order>
                <description expression="true">"Run '%s' on %s" % (deployed.name, deployed.container.name)</description>
                <classpath-resources>
                    <value>smoketest/execute-http-request.sh.ftl</value>
                </classpath-resources>
                <target-host expression="true">deployed.container.host</target-host>
                <freemarker-context>
                    <script>smoketest/execute-http-request</script>
                </freemarker-context>
            </os-script>
        </steps>
    </rule>


    <rule name="docker.Volume.Create" scope="deployed">
        <conditions>
            <type>docker.DeployedFolderVolume</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <upload>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">"%s/%s" % (deployed.container.volumeDirectory,deployed.name)</target-path>
                <create-target-path>true</create-target-path>
                <order>50</order>
                <description expression="true">"Copy volume '%s' to '%s'" % (deployed.name, deployed.container.name)</description>
            </upload>
        </steps>
    </rule>
    <rule name="docker.Volume.Destroy" scope="deployed">
        <conditions>
            <type>docker.DeployedFolderVolume</type>
            <operation>DESTROY</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <delete>
                <target-host expression="true">previousDeployed.container.host</target-host>
                <target-path expression="true">"%s/%s" % (previousDeployed.container.volumeDirectory,previousDeployed.name)</target-path>
                <order>40</order>
                <description expression="true">"Delete volume '%s' from '%s'" % (previousDeployed.name,previousDeployed.container.name)
                </description>
            </delete>
        </steps>
    </rule>

    <rule name="docker.stop.start.on.modified.volumes" scope="plan">
        <planning-script-path>docker/planning/start-stop-container-on-modified-volumes.py</planning-script-path>
    </rule>
</rules>
