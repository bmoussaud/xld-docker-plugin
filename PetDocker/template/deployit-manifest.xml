<?xml version="1.0" encoding="UTF-8"?>
<udm.DeploymentPackage version="##VERSION##" application="PetDocker">
    <orchestrator>
        <value>docker-deployed-containers-orchestrator</value>
    </orchestrator>
    <deployables>
        <sql.SqlScripts name="sql" file="sql/Archive.zip">
            <tags/>
            <scanPlaceholders>true</scanPlaceholders>
        </sql.SqlScripts>
        <smoketest.HttpRequestTest name="smoketest">
            <url>http://petclinic:8080/petclinic</url>
            <expectedResponseText>Home</expectedResponseText>
            <headers/>
            <links>
                <value>petclinic:petclinic</value>
            </links>
        </smoketest.HttpRequestTest>
        <docker.Image name="petclinic-backend">
            <image>petdocker/petdocker-backend-app:##VERSION##</image>
            <portMappings/>
            <volumeMappings/>
            <volumeFromMappings/>
        </docker.Image>
        <docker.Image name="petclinic">
            <image>petdocker/petdocker-app:3.1</image>
            <portMappings>
                <entry key="8080">8888</entry>
            </portMappings>
            <links>
                <value>petclinic-backend:petclinic-backend</value>
            </links>
            <memory>{{PET_APP_MEM}}</memory>
        </docker.Image>
    </deployables>
</udm.DeploymentPackage>
